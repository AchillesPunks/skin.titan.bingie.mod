<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<smartplaylist type="movies">
    <name>Crime Thrillers</name>
    <match>all</match>
    <rule field="genre" operator="is">
        <value>crime</value>
    </rule>
    <rule field="genre" operator="is">
        <value>thriller</value>
    </rule>
    <rule field="genre" operator="isnot">
        <value>comedy</value>
    </rule>
    <order direction="descending">year</order>
</smartplaylist>
