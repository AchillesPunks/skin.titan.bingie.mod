<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<smartplaylist type="movies">
    <name>Halloween Movies</name>
    <match>all</match>
    <rule field="genre" operator="contains">
        <value>horror</value>
    </rule>
	<rule field="tag" operator="isnot">
        <value>christmas</value>
        <value>western</value>
    </rule>
	<order direction="descending">random</order>
</smartplaylist>
