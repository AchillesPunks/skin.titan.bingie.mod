<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<smartplaylist type="movies">
    <name>Sci-Fi Horrors</name>
    <match>all</match>
    <rule field="genre" operator="is">
        <value>Science Fiction</value>
    </rule>
    <rule field="genre" operator="is">
        <value>Horror</value>
    </rule>
    <rule field="votes" operator="greaterthan">
        <value>100</value>
    </rule>
    <order direction="descending">year</order>
</smartplaylist>
