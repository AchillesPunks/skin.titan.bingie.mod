<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<smartplaylist type="movies">
    <name>World War Related Movies</name>
    <match>all</match>
    <rule field="tag" operator="is">
        <value>world war i</value>
        <value>world war ii</value>
        <value>world war iii</value>
    </rule>
    <rule field="year" operator="greaterthan">
        <value>1980</value>
    </rule>
    <order direction="descending">year</order>
</smartplaylist>
