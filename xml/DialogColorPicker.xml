<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">6</defaultcontrol>
	<include>animation_window_open_close</include>
	<controls>
		<control type="group">

        <control type="image">
            <include>FullscreenDimensions</include>
            <texture>colors/color_white.png</texture>
            <colordiffuse>ff000000</colordiffuse>
        </control>
      
        <!-- bgpanel -->
        <control type="group">
            <left>50</left>
            <top>70</top>
            <right>50</right>
            <bottom>160</bottom>
            <control type="image">
                <texture border="15">diffuse/bgpanel.png</texture>
                <colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
            </control>
            <control type="image">
                <texture border="15">diffuse/bgpanel.png</texture>
                <colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
            </control>
        </control>
		<!--Header-->
        <control type="label">
            <posx>64</posx>
            <posy>60</posy>
            <width min="80" max="1400">auto</width>
            <height>100</height>
            <font>Bold45</font>
			<label>$LOCALIZE[737]: $INFO[Container(6).ListItem.Label,, - ]$INFO[Container(6).ListItem.Label2,#,]</label>
            <align>left</align>
            <textcolor>white</textcolor>
			<shadowcolor>black</shadowcolor>
        </control>
			<!-- Color picker panel -->
			<control type="panel" id="6">
			<posx>65</posx>
			<posy>152</posy>
			<width>1798</width>
			<height>755</height>
				<onup>6</onup>
				<ondown>9001</ondown>
				<onleft>9001</onleft>
				<onright>9001</onright>
				<orientation>vertical</orientation>
				<preloaditems>4</preloaditems>
				<pagecontrol>60</pagecontrol>
				<viewtype label="31438">icons</viewtype>
				<itemlayout height="84" width="128">
					<control type="group">
						<control type="image">
							<width>98%</width>
							<height>96%</height>
							<texture>diffuse/panel2.png</texture>
						</control>
						<control type="image">
							<width>98%</width>
							<height>96%</height>
							<texture border="0">diffuse/panel2.png</texture>
							<colordiffuse>$INFO[ListItem.Label2]</colordiffuse>
							<aspectratio>stretch</aspectratio>
						</control>
					</control>
				</itemlayout>
				<focusedlayout height="84" width="128">
					<control type="group">
						<animation effect="zoom" time="200" tween="sine" easing="inout" start="100" end="164" center="auto">Focus</animation>
						<control type="image">
							<width>98%</width>
							<height>96%</height>
							<texture>diffuse/panel2.png</texture>
						</control>
						<control type="image">
							<width>98%</width>
							<height>96%</height>
							<texture border="0">diffuse/panel2.png</texture>
							<colordiffuse>$INFO[ListItem.Label2]</colordiffuse>
							<aspectratio>stretch</aspectratio>
						</control>
					</control>
				</focusedlayout>
			</control>

			<!--footer panel-->
			<control type="image">
				<posx>0</posx>
				<bottom>0</bottom>
				<width>100%</width>
				<height>100</height>
				<texture>diffuse/panel2.png</texture>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
			</control>
			<control type="image">
				<posx>0</posx>
				<bottom>0</bottom>
