				<height>100</height>
				<texture>diffuse/panel2.png</texture>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
			</control>
			
		<control type="grouplist" id="9001">
			<orientation>horizontal</orientation>
			<left>65</left>
			<bottom>0</bottom>
            <height>80</height>
			<width>1800</width>		
			<!-- Cancel button -->
			<control type="button" id="7">
				<width>300</width>
				<height>60</height>
				<onup>6</onup>
