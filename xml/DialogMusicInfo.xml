<?xml version="1.0" encoding="utf-8"?>
<!-- BINGIE -->
<window>
  <defaultcontrol always="true">9000</defaultcontrol>
  <controls>
    <!--Dialog Overlay-->
    <control type="group">
      <visible>!Window.IsActive(fullscreenvideo) + !Window.IsActive(filebrowser)</visible>
      <include>DialogOverlayExtra</include>
      <animation effect="fade" time="250" start="0" end="100" reversible="false">WindowOpen</animation>
    </control>

    <!--Dialog Info-->
    <control type="group">
      <visible>!Window.IsVisible(yesnodialog) + !Window.IsActive(filebrowser)</visible>
      <animation type="WindowOpen">
        <effect type="slide" start="1200" end="0" time="250" tween="cubic" easing="inout" />
      </animation>
      <animation type="WindowClose">
        <effect type="slide" start="0" end="1200" time="250" tween="cubic" easing="inout" />
      </animation>
      <!--Panel-->
      <control type="image">
        <posx>630</posx>
        <posy>0</posy>
        <width>1340</width>
        <height>100%</height>
        <texture>diffuse/panel2.png</texture>
        <colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
      </control>
	  <control type="image">
        <posx>630</posx>
        <posy>0</posy>
        <width>1340</width>
        <height>100%</height>
        <texture>diffuse/panel2.png</texture>
        <colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
      </control>

      <!--Header-->
      <control type="label">
        <description>Heading</description>
        <posx>695</posx>
        <posy>10</posy>
        <width>1200</width>
        <font>Bold45</font>
        <textcolor>$INFO[Skin.String(GeneralHighlightTextColor)]</textcolor>
        <align>left</align>
        <height>100</height>
        <label>658</label>
        <visible>Container.Content(Songs)</visible>
      </control>
      <control type="label">
        <description>Heading</description>
        <posx>695</posx>
        <posy>10</posy>
        <width>1200</width>
        <font>Bold45</font>
        <textcolor>$INFO[Skin.String(GeneralHighlightTextColor)]</textcolor>
        <align>left</align>
        <height>100</height>
        <label>24016</label>
        <visible>Container.Content(Albums)</visible>
      </control>
      <control type="label">
        <description>Heading</description>
        <posx>695</posx>
        <posy>10</posy>
        <width>1200</width>
        <font>Bold45</font>
        <textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
        <align>left</align>
        <height>100</height>
        <label>24017</label>
        <visible>Container.Content(Artists)</visible>
      </control>

      <!-- title -->
      <control type="label">
        <posx>695</posx>
        <posy>150</posy>
        <width>800</width>
        <font>Reg36</font>
        <align>left</align>
        <label>$INFO[ListItem.Album]</label>
        <visible>Container.Content(Albums)</visible>
      </control>
      <control type="label">
        <posx>695</posx>
        <posy>150</posy>
        <width>800</width>
        <font>Reg36</font>
        <align>left</align>
        <label>$INFO[ListItem.Artist]</label>
        <visible>Container.Content(Artists)</visible>
      </control>
      <control type="label">
        <posx>695</posx>
        <posy>150</posy>
        <width>800</width>
        <font>Reg36</font>
        <align>left</align>
        <label>$INFO[ListItem.Title]</label>
        <visible>Container.Content(Songs)</visible>
      </control>

      <control type="image">
        <posx>675</posx>
        <posy>220</posy>
        <width>1200</width>
        <height>250</height>
        <texture border="5">dialogs/default/inner.png</texture>
      </control>

      <!--Icon-->
      <control type="image">
        <right>0</right>
        <posy>235</posy>
        <width>350</width>
        <height>220</height>
        <fadetime>800</fadetime>
        <aspectratio align="center" aligny="center">keep</aspectratio>
        <texture background="true" diffuse="diffuse/panel2.png">$INFO[ListItem.Icon]</texture>
      </control>

      <control type="grouplist">
        <posx>675</posx>
        <posy>220</posy>

        <control type="button">
          <description>Genre</description>
          <width>800</width>
          <height>60</height>
          <align>left</align>
          <textoffsetx>20</textoffsetx>
          <textwidth>540</textwidth>
          <texturenofocus>dialogs/default/separator.png</texturenofocus>
          <label>$LOCALIZE[515]:</label>
          <label2>$INFO[ListItem.Genre]</label2>
          <enable>false</enable>
          <disabledcolor>$INFO[Skin.String(GeneralTextColor)]</disabledcolor>
        </control>
        <control type="button">
          <description>Year</description>
          <width>800</width>
          <height>60</height>
          <align>left</align>
          <textoffsetx>20</textoffsetx>
          <textwidth>540</textwidth>
          <texturenofocus>dialogs/default/separator.png</texturenofocus>
          <label>$LOCALIZE[562]:</label>
          <label2>$INFO[ListItem.Year]</label2>
          <enable>false</enable>
          <disabledcolor>$INFO[Skin.String(GeneralTextColor)]</disabledcolor>
        </control>
        <control type="button">
          <description>Album</description>
          <width>800</width>
          <height>60</height>
          <align>left</align>
          <textoffsetx>20</textoffsetx>
          <textwidth>540</textwidth>
          <texturenofocus>dialogs/default/separator.png</texturenofocus>
          <label>$LOCALIZE[558]:</label>
          <label2>$INFO[ListItem.Album]</label2>
          <enable>false</enable>
          <disabledcolor>$INFO[Skin.String(GeneralTextColor)]</disabledcolor>
        </control>
        <control type="grouplist">
          <!-- Rating -->
          <orientation>horizontal</orientation>
          <control type="label">
            <description>blank space</description>
            <width>15</width>
          </control>
          <control type="label">
            <description>Rating</description>
            <width>559</width>
            <height>60</height>
            <align>left</align>
            <label>$LOCALIZE[563]:</label>
          </control>
          <control type="image">
            <!--Stars music-->
            <width>200</width>
            <height>60</height>
            <aspectratio aligny="center" align="center">keep</aspectratio>
            <colordiffuse>$INFO[Skin.String(GeneralTextColor)]</colordiffuse>
            <texture fallback="ratings/star_rating/empty.png">$VAR[musicrating_stars]</texture>
          </control>
        </control>
      </control>
      <control type="image">
        <posx>675</posx>
        <posy>486</posy>
        <width>1200</width>
        <height>430</height>
        <texture border="5">dialogs/default/inner.png</texture>
      </control>
      <control type="textbox">
        <description>Plot value</description>
        <posx>695</posx>
        <posy>506</posy>
        <width>1160</width>
        <height>400</height>
        <align>justify</align>
        <pagecontrol>60</pagecontrol>
        <label>$VAR[Plots]</label>
      </control>

      <control type="scrollbar" id="60">
        <right>5</right>
        <posy>506</posy>
        <height>388</height>
        <onup>60</onup>
        <ondown>60</ondown>
        <onleft>9000</onleft>
        <onright>9000</onright>
        <animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Container.Scrolling | String.IsEqual(Skin.String(scrollbar_visibility),always_show)">Conditional</animation>
        <animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Container.Scrolling | String.IsEqual(Skin.String(scrollbar_visibility),always_show)]">Conditional</animation>
      </control>

      <!--Button Group-->
      <control type="grouplist" id="9000">
        <posx>675</posx>
        <posy>940</posy>
        <orientation>horizontal</orientation>
        <itemgap>5</itemgap>
        <defaultcontrol>5</defaultcontrol>
        <onup condition="Control.IsVisible(60)">60</onup>
        <width>1200</width>
        <control type="button" id="11">
          <!--Cancel-->
          <width>296</width>
          <height>80</height>
          <align>center</align>
          <label>222</label>
          <include>DialogButtonOther</include>
          <onclick>Close</onclick>
        </control>
        <control type="button" id="12">
          <!--Album Info button-->
          <width>296</width>
          <height>80</height>
          <align>center</align>
          <include>DialogButtonOther</include>
          <label>10523</label>
        </control>
        <control type="button" id="10">
          <!--Get Thumb button-->
          <width>296</width>
          <height>80</height>
          <align>center</align>
          <include>DialogButtonOther</include>
          <label>13405</label>
        </control>
        <control type="button" id="7">
          <!--set personal rating-->
          <width>296</width>
          <height>80</height>
          <align>center</align>
          <include>DialogButtonOther</include>
          <label>38023</label>
        </control>
		<control type="button" id="3102">
		  <!--Youtube-->
		  <width>296</width>
          <height>80</height>
          <align>center</align>
          <include>DialogButtonOther</include>
          <label>31797</label>
          <onclick>Close</onclick>
          <onclick>ActivateWindow(videos,plugin://plugin.video.youtube/search/?q=$INFO[ListItem.Artist],return)</onclick>
		</control>
        <control type="button" id="6">
          <!--update-->
          <width>296</width>
          <height>80</height>
          <align>center</align>
          <include>DialogButtonOther</include>
          <label>184</label>
        </control>
      </control>
      <!--Arrows-->
      <control type="image">
        <animation effect="fade" start="100" end="50" tween="sine" easing="inout" time="800" pulse="true" reversible="false" condition="true">Conditional</animation>
        <right>15</right>
        <bottom>70</bottom>
        <posy>50</posy>
        <width>20</width>
        <height>60</height>
        <aspectratio>keep</aspectratio>
        <texture>dialogs/videoinfo/arrow.png</texture>
        <visible>!Control.HasFocus(51)</visible>
        <colordiffuse>white</colordiffuse>
        <visible>Container(9000).HasNext</visible>
      </control>
      <control type="image">
        <animation effect="fade" start="100" end="50" tween="sine" easing="inout" time="800" pulse="true" reversible="false" condition="true">Conditional</animation>
        <right>1255</right>
        <bottom>70</bottom>
        <posy>50</posy>
        <width>20</width>
        <height>60</height>
        <aspectratio>keep</aspectratio>
        <texture flipx="true">dialogs/videoinfo/arrow.png</texture>
        <visible>!Control.HasFocus(51)</visible>
        <colordiffuse>white</colordiffuse>
        <visible>Container(9000).HasPrevious</visible>
      </control>
    </control>
  </controls>
</window>