<?xml version="1.0" encoding="utf-8"?>
<!-- BINGIE -->
<window>
    <defaultcontrol always="true">9000</defaultcontrol>
    <controls>
        <!--Dialog Overlay-->
		<control type="group">
			<visible>!Window.IsActive(fullscreenvideo)</visible>
			<include>DialogOverlayExtra</include>
			<animation effect="fade" time="250" start="0" end="100" reversible="false">WindowOpen</animation>
        </control>
		
        <!--Dialog PVR Guid Info-->
        <control type="group">
            <visible>!Window.IsVisible(yesnodialog)</visible>
			<animation type="WindowOpen">
				<effect type="slide" start="1200" end="0" time="250" tween="cubic" easing="inout" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0" end="1200" time="250" tween="cubic" easing="inout" />
			</animation>
            
            <!--Panel-->
            <control type="image">
                <posx>630</posx>
                <posy>0</posy>
                <width>1340</width>
                <height>100%</height>
                <texture>diffuse/panel2.png</texture>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
            </control>
            <control type="image">
                <posx>630</posx>
                <posy>0</posy>
                <width>1340</width>
                <height>100%</height>
                <texture>diffuse/panel2.png</texture>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
            </control>
            
            <!-- pvr info image -->
			<control type="image">
				<width>300</width>
				<height>180</height>
				<right>60</right>
                <posy>40</posy>
				<texture background="true">$VAR[PVRInfoThumb]</texture>
                <aspectratio align="right" aligny="top">keep</aspectratio>
			</control>
            
            <!--Header-->
            <control type="label">
                <description>Heading</description>
                <posx>700</posx>
                <posy>10</posy>
                <width>1200</width>
				<font>Bold45</font>
				<textcolor>$INFO[Skin.String(GeneralHighlightTextColor)]</textcolor>
                <label>19047</label>
                <align>left</align>
				<height>100</height>
            </control>
			<!-- program title -->
			<control type="label">
				<posx>700</posx>
				<posy>150</posy>
				<width>800</width>
				<font>Reg36</font>
				<align>left</align>
				<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                <shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
				<label>$INFO[ListItem.Title]</label>
			</control>
            <control type="group">
                <posx>680</posx>
                <posy>220</posy>
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>1200</width>
                    <height>300</height>
                    <texture border="5">dialogs/default/inner.png</texture>
                </control>
                <control type="button">
                    <description>Time</description>
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>1200</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
					<disabledcolor>$INFO[Skin.String(GeneralTextColor)]</disabledcolor>
                    <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                    <texturenofocus>dialogs/default/separator.png</texturenofocus>
                    <label>$LOCALIZE[142]</label>
                    <label2>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ] ($INFO[ListItem.StartDate])</label2>
                    <enable>false</enable>
                </control>
                <control type="button">
                    <description>Duration</description>
                    <posx>0</posx>
                    <posy>59</posy>
                    <width>1200</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
					<disabledcolor>$INFO[Skin.String(GeneralTextColor)]</disabledcolor>
                    <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                    <texturenofocus>dialogs/default/separator.png</texturenofocus>
                    <label>$LOCALIZE[180]:</label>
                    <label2>$VAR[ListItemDuration]</label2>
                    <enable>false</enable>
                </control>
                <control type="button">
                    <description>Channel</description>
                    <posx>0</posx>
                    <posy>118</posy>
                    <width>1200</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
					<disabledcolor>$INFO[Skin.String(GeneralTextColor)]</disabledcolor>
                    <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                    <texturenofocus>dialogs/default/separator.png</texturenofocus>
                    <label>$LOCALIZE[19148]:</label>
                    <label2>$INFO[ListItem.ChannelName]</label2>
                    <enable>false</enable>
                </control>
                <control type="button">
                    <description>Genre</description>
                    <posx>0</posx>
                    <posy>177</posy>
                    <width>1200</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
					<disabledcolor>$INFO[Skin.String(GeneralTextColor)]</disabledcolor>
                    <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                    <texturenofocus>dialogs/default/separator.png</texturenofocus>
                    <label>$LOCALIZE[135]:</label>
                    <label2 fallback="161">$INFO[Window(Home).Property(SkinHelper.ListItem.Genre)]</label2>
                    <enable>false</enable>
                </control>
                <control type="button">
                    <description>Episode</description>
                    <posx>0</posx>
                    <posy>236</posy>
                    <width>1200</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
					<disabledcolor>$INFO[Skin.String(GeneralTextColor)]</disabledcolor>
                    <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                    <texturenofocus/>
                    <label>$LOCALIZE[20359]</label>
                    <label2>$INFO[ListItem.Season,S,]$INFO[ListItem.Episode,E, - ]$INFO[ListItem.EpisodeName]</label2>
                    <enable>false</enable>
                </control>
            </control>
            <control type="image">
                <posx>680</posx>
                <posy>545</posy>
                <width>1200</width>
                <height>371</height>
                <texture border="5">dialogs/default/inner.png</texture>
            </control>
            <control type="textbox" id="400">
                <description>Plot value with no poster present</description>
                <posx>700</posx>
                <posy>565</posy>
                <width>1160</width>
                <height>321</height>
                <align>justify</align>
                <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
				<shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
                <pagecontrol>60</pagecontrol>
                <label fallback="161">$VAR[Plots]</label>
                <visible>String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Art.Poster))</visible>
            </control>
            <control type="textbox" id="400">
                <description>Plot value with poster present</description>
                <posx>700</posx>
                <posy>565</posy>
                <width>820</width>
                <height>321</height>
                <align>justify</align>
                <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
				<shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
                <pagecontrol>60</pagecontrol>
                <label fallback="161">$VAR[Plots]</label>
                <visible>!String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Art.Poster))</visible>
            </control>
            <control type="image">
                <right>50</right>
                <posy>555</posy>
                <width>300</width>
                <height>351</height>
                <texture background="true">$INFO[Window(Home).Property(SkinHelper.ListItem.Art.Poster)]</texture>
                <aspectratio align="right" aligny="top">keep</aspectratio>
            </control>
            <!--Button Group-->
            <control type="grouplist" id="9000">
                <posx>672</posx>
                <posy>940</posy>
				<onleft>back</onleft>
				<orientation>horizontal</orientation>
				<itemgap>20</itemgap>
                <onup>60</onup>
                <ondown>60</ondown>
                <defaultcontrol>5</defaultcontrol>
                <control type="button" id="5">
                    <!--Switch-->
                    <width>289</width>
                    <include>DialogButtonOther</include>
                    <label>$LOCALIZE[19165]</label>
					<font>Reg26</font>
                    <visible>Window.IsActive(PVRGuideInfo)</visible> 
                </control>
                <control type="button" id="6">
                    <!--Record-->
                    <width>289</width>
                    <label/>
                    <include>DialogButtonOther</include>
                    <visible>Window.IsActive(PVRGuideInfo)</visible> 
                </control>
                <control type="button" id="9">
                    <!--Add timer-->
                    <width>289</width>
                    <label>19061</label>
                    <include>DialogButtonOther</include>
                    <visible>Window.IsActive(PVRGuideInfo)</visible> 
                </control>
                <control type="button" id="8">
                    <!--play Recording-->
                    <width>289</width>
                    <label>19687</label>
                    <include>DialogButtonOther</include>
                    <visible>Window.IsActive(PVRRecordingInfo)</visible> 
                </control>
				<control type="button" id="4">
					<width>289</width>
					<description>Find similar</description>
					<include>DialogButtonOther</include>
					<label>19003</label>
                    <visible>Window.IsActive(PVRGuideInfo)</visible> 
				</control>
                <control type="button" id="444">
					<width>289</width>
					<description>Trailer</description>
					<include>DialogButtonOther</include>
					<label>20410</label>
                    <onclick>Close</onclick>
                    <onclick>Playmedia($ESCINFO[Window(Home).Property(SkinHelper.ListItem.Trailer)])</onclick>
                    <visible>!String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Trailer))</visible>
                </control>
                <control type="button" id="445">
					<width>289</width>
					<description>Youtube</description>
					<include>DialogButtonOther</include>
					<label>31797</label>
                    <onclick condition="System.HasAddon(plugin.video.youtube)">RunScript(script.skin.helper.service,action=searchyoutube,title=$INFO[ListItem.Title] $INFO[ListItem.Year],header=$LOCALIZE[31797])</onclick>
                    <onclick condition="!System.HasAddon(plugin.video.youtube)">ActivateWindow(Videos,plugin://plugin.video.youtube)</onclick>
                    <visible>Skin.HasSetting(videoinfo_button_youtubevideos)</visible>
				</control>
				<control type="button" id="7">
                    <!--Cancel-->
                    <width>289</width>
                    <label>$LOCALIZE[222]</label>
                    <include>DialogButtonOther</include>
					<font>Reg26</font>
                    <visible>Window.IsActive(PVRGuideInfo)</visible> 
                </control>
            </control>
        </control>
    </controls>
</window>