<?xml version="1.0" encoding="utf-8"?>
<!-- BINGIE -->
<window>
    <defaultcontrol always="true">5000</defaultcontrol>
	
	<onunload>ClearProperty(ShowViewSubMenu,Home)</onunload>
    <include>allViewIds</include>
    <controls>
        <!-- Video Background -->
        <include>GlobalBackground</include>
		<!--Header-->
        <include>Header</include>
 
		<!--NowPlaying-->
		<include>NowPlayingModern</include>
 
		<!-- all Views -->
        <include>allViews</include>
	
        <!--Sub Menu-->
        <control type="group">
			<visible>Integer.IsGreater(Container.NumItems,0)</visible>
            <include condition="Skin.HasSetting(smallContextMenu)">SideBladeClassic</include>
			<include condition="!Skin.HasSetting(smallContextMenu)">SideBladeModern</include>
            <!--Grouplist 9000-->
            <control type="grouplist" id="9000">
                <posx>21</posx>
                <posy>185</posy>
                <width>458</width>
                <height>770</height>
                <itemgap>3</itemgap>
                <onleft>5000</onleft>
                <onright>5000</onright>
				<onright>ClearProperty(ShowViewSubMenu,Home)</onright>
				<onleft>ClearProperty(ShowViewSubMenu,Home)</onleft>
				<onback>ClearProperty(ShowViewSubMenu,Home)</onback>
				<onback>5000</onback>
                <onup>9000</onup>
                <ondown>9000</ondown>
                <orientation>vertical</orientation>

               <control type="button" id="3">
					<description>Sort by button</description>
					<include>SideBladeMenuButton</include>
					<label>103</label>
				</control>
				<control type="togglebutton" id="4">
					<description>Sort asc</description>
					<include>SideBladeMenuButton</include>
					<alttexturefocus border="10" colordiffuse="$INFO[Skin.String(ButtonFocusColor)]">diffuse/panel.png</alttexturefocus>
					<alttexturenofocus/>
					<label>585</label>
					<altlabel>584</altlabel>
					<usealttexture>Container.SortDirection(Ascending)</usealttexture>
				</control>

				<control type="edit" id="19">
					<visible>Container.CanFilter + !Container.CanFilterAdvanced</visible>
					<description>Filter</description>
					<textwidth>230</textwidth>
					<include>SideBladeMenuButton</include>
					<textoffsetx>50</textoffsetx>
					<textoffsety>13</textoffsety>
					<label>587</label>
				</control>
				<control type="radiobutton" id="98">
					<visible>Container.CanFilterAdvanced</visible>
					<description>Filter</description>
					<include>SideBladeMenuButton</include>
					<label>587</label>
					<selected>Container.Filtered</selected>
					<onclick>right</onclick>
					<onclick>Filter</onclick>
				</control>
				
				<include>SideBladeViewCommands</include>

            </control>
        </control>
		<include condition="Skin.HasSetting(DebugGrid) | Skin.HasSetting(DebugInfo)">DebugInfo</include>
    </controls>
</window>