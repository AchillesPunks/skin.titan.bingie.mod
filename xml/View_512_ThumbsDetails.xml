<?xml version="1.0" encoding="UTF-8"?>
<includes>
  
  <include name="View_512_ThumbsDetails">
	
    <control type="group">
      <visible>Control.IsVisible(512)</visible>
		<include>animation_view_change</include>
      
	  <!-- Fanart Image Added to View-->
            <control type="multiimage">
				<visible>!Skin.HasSetting(View512_DisableFanArt)</visible>
                <include>FullscreenDimensions</include>
                <texture border="15">diffuse/bgpanel.png</texture>
			    <colordiffuse>33ffffff</colordiffuse>
				<imagepath background="true">$VAR[backgroundVar]</imagepath>
                <aspectratio>scale</aspectratio>
                <fadetime>350</fadetime>
                <include>fanartSpeed</include>
                <randomize>true</randomize>
                <loop>yes</loop>
<!-- Background Animation -->
                <animation effect="zoom" start="110" end="130" center="auto" time="12000" tween="cubic" easing="inout" pulse="true" condition="Skin.HasSetting(BackgroundAnimation)">Conditional</animation>
                <animation effect="slide" start="-10,-10" end="10,10" time="8000" tween="cubic" easing="inout" pulse="true" condition="Skin.HasSetting(BackgroundAnimation)">Conditional</animation>
            </control>

    <include>MovieDetailsLeft</include>
	  
	  <control type="panel" id="512">
        <animation effect="slide" end="-635" time="250" condition="Skin.HasSetting(View512_ShowInfoRight)">Conditional</animation>
        <viewtype label="31439">icons</viewtype>
          <include content="View_Forced">
              <param name="viewtype" value="$LOCALIZE[31439]" />
          </include>
        <right>40</right>
        <bottom>167</bottom>
        <height>704</height>
        <width>1192</width>
        <orientation>vertical</orientation>
        <onleft>9000</onleft>
		<onleft>CancelAlarm(preview_delay,silent)</onleft>
		<onleft condition="$EXP[IsPlayingUnrecognizedContent] + Skin.HasSetting(DetailsAutoTrailer) + [!String.IsEmpty(ListItem.Trailer) | !String.IsEmpty(Window(Home).Property(TrailerPlaying))] + !String.IsEqual(Window(Home).Property(TrailerPlaying),fullscreen)">PlayerControl(Stop)</onleft>
		<onback>CancelAlarm(preview_delay,silent)</onback>
		<onback condition="$EXP[IsPlayingUnrecognizedContent] + Skin.HasSetting(DetailsAutoTrailer) + [!String.IsEmpty(ListItem.Trailer) | !String.IsEmpty(Window(Home).Property(TrailerPlaying))] + !String.IsEqual(Window(Home).Property(TrailerPlaying),fullscreen)">PlayerControl(Stop)</onback>
        <onright condition="Skin.HasSetting(EnableQuickJump)">6000</onright>
        <onright condition="!Skin.HasSetting(EnableQuickJump)">60</onright>
        <onup>512</onup>
        <ondown>512</ondown>
        <preloaditems>4</preloaditems>
        <pagecontrol>60</pagecontrol>
          <itemlayout height="176" width="296" condition="![Skin.HasSetting(LandscapeAltAspectRatioAdvLauncher) + String.Contains(Container.FolderPath,advanced.launcher)]">
            <control type="group">
                <width>288</width>
                <height>168</height>
                <include>ThumbsViewLayoutSmall</include>
            </control>
        </itemlayout>
        <focusedlayout height="176" width="296" condition="![Skin.HasSetting(LandscapeAltAspectRatioAdvLauncher) + String.Contains(Container.FolderPath,advanced.launcher)]">
			<control type="group">
                <width>288</width>
                <height>168</height>
				<include>ThumbsViewLayoutFocusSmall</include>
                <include condition="Skin.HasSetting(DetailsAutoTrailer)">LibraryAutoTrailerStopButton</include>
						<include content="LibraryAutoTrailerStartButton" condition="Skin.HasSetting(DetailsAutoTrailer)">
							<param name="interval" value="$INFO[Skin.String(details_auto_trailer_interval)]" />
						</include>
			</control>
        </focusedlayout>
         <itemlayout height="248" width="397" condition="[Skin.HasSetting(LandscapeAltAspectRatioAdvLauncher) + String.Contains(Container.FolderPath,advanced.launcher)]">
			<control type="group">
                <width>356</width>
                <height>240</height>
                <left>20</left>
                <include>ThumbsViewLayoutSmall</include>
            </control>
        </itemlayout>
        <focusedlayout height="248" width="397" condition="[Skin.HasSetting(LandscapeAltAspectRatioAdvLauncher) + String.Contains(Container.FolderPath,advanced.launcher)]">
			<control type="group">
				<animation type="focus">
					<effect type="zoom" start="100" end="105" center="auto" time="150" />
				</animation>
				<animation type="unfocus">
					<effect type="zoom" start="105" end="100" center="auto" time="150" />
				</animation>
                <width>356</width>
                <height>240</height>
                <left>20</left>
				<include>ThumbsViewLayoutFocusSmall</include>
			</control>
        </focusedlayout>
 	  </control>
      
	  
	  
	  <!--vertical Scollbar-->
		<control type="scrollbar" id="60">
			<visible>Control.IsVisible(512) + Integer.IsGreater(Container.NumItems,0)</visible>
			<right>10</right>
			<bottom>148</bottom>
            <height>720</height>
			<onup>60</onup>
			<ondown>6000</ondown>
			<onleft>509</onleft>
			<animation effect="fade" start="0" end="100" time="400" condition="[Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] + !Control.IsVisible(6002)">Conditional</animation>
			<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] | Control.IsVisible(6002)">Conditional</animation>
		</control>
    
	  
    </control>
	
	
	

  </include>
</includes>
