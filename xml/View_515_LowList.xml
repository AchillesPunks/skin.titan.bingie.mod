<?xml version="1.0" encoding="utf-8"?>
<!-- BINGIE -->
<includes>

	<include name="LowListLayout">

		<!--Title-->
		<control type="label">
			<posx>10</posx>
			<posy>15</posy>
			<height>40</height>
			<align>left</align>
			<label>$INFO[ListItem.Label]</label>
			<textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
			<font>Reg36</font>
			<animation effect="slide" end="90" reversible="false" time="0" condition="Window.IsActive(tvchannels) | Window.IsActive(tvrecordings) | Window.IsActive(radiochannels)">Conditional</animation>
		</control>
		<!--Details-->
		<control type="label">
			<posx>10</posx>
			<posy>55</posy>
			<height>60</height>
			<width>837</width>
			<align>left</align>
			<label>$VAR[ListDetails]</label>
			<textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
			<font>Light28</font>
			<animation effect="slide" end="90" reversible="false" time="0" condition="Window.IsActive(tvchannels) | Window.IsActive(tvrecordings) | Window.IsActive(radiochannels)">Conditional</animation>
		</control>
		<control type="image">
			<bottom>0</bottom>
			<posy>0</posy>
			<height>1</height>
			<texture>diffuse/panel.png</texture>
			<colordiffuse>grey</colordiffuse>
		</control>
		<include>WatchedIndicatorNormal</include>
		
		<control type="image">
			<!--icon-->
			<posy>10</posy>
			<left>0</left>
			<width>90</width>
			<height>95</height>
			<texture background="true">$VAR[PosterThumbList]</texture>
			<aspectratio align="center" aligny="center">keep</aspectratio>
			<visible>Window.IsActive(tvchannels) | Window.IsActive(tvrecordings) | Window.IsActive(radiochannels)</visible>
		</control>

	</include>

    <include name="LowListFocusLayout">
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<height>114</height>
			<texture border="5">diffuse/panel.png</texture>
			<colordiffuse>$INFO[Skin.String(ViewDetailsFocusColor)]</colordiffuse>
			
		</control>
		<!--Title-->
		<control type="label">
			<posx>10</posx>
			<posy>15</posy>
			<height>40</height>
			<align>left</align>
			<label>$INFO[ListItem.Label]</label>
			<textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
			<font>Reg36</font>
			<scroll>true</scroll>
			<animation effect="slide" end="90" reversible="false" time="0" condition="Window.IsActive(tvchannels) | Window.IsActive(tvrecordings) | Window.IsActive(radiochannels)">Conditional</animation>
		</control>
		<!--Details-->
		<control type="label">
			<posx>10</posx>
			<posy>55</posy>
			<height>60</height>
			<width>837</width>
			<align>left</align>
			<label>$VAR[ListDetails]</label>
			<textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
			<font>Light28</font>
			<scroll>true</scroll>
			<animation effect="slide" end="90" reversible="false" time="0" condition="Window.IsActive(tvchannels) | Window.IsActive(tvrecordings) | Window.IsActive(radiochannels)">Conditional</animation>
		</control>
		<control type="image">
			<bottom>0</bottom>
			<posy>0</posy>
			<height>1</height>
			<texture>diffuse/panel.png</texture>
			<colordiffuse>grey</colordiffuse>
		</control>
		<include>WatchedIndicatorNormal</include>
		
		<control type="image">
			<!--icon-->
			<posy>10</posy>
			<left>0</left>
			<width>90</width>
			<height>95</height>
			<texture background="true">$VAR[PosterThumbList]</texture>
			<aspectratio align="center" aligny="center">keep</aspectratio>
			<visible>Window.IsActive(tvchannels) | Window.IsActive(tvrecordings) | Window.IsActive(radiochannels)</visible>
		</control>
		
	</include>
	

	<include name="LowListSlimLayout">

		<!--Title-->
		<control type="label">
			<posx>10</posx>
			<posy>3</posy>
			<align>left</align>
			<width>90%</width>
			<label>[B]$INFO[ListItem.Label][/B]</label>
			<textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
			<font>Light30</font>
		</control>
		
		<!--duration-->
		<control type="label">
			<posy>3</posy>
			<right>10</right>
			<width>150</width>
			<align>right</align>
			<label>$INFO[ListItem.Duration,,]</label>
			<textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
			<font>Light28</font>
			<visible>![[Skin.HasSetting(WatchedIndicator.Watched) + String.IsEqual(ListItem.Overlay,OverlayWatched.png)] | [Skin.HasSetting(WatchedIndicator.Sets) + String.Contains(ListItem.Path,videodb://movies/sets/)] | [Skin.HasSetting(WatchedIndicator.Progress) + ListItem.IsResumable] | [Skin.HasSetting(WatchedIndicator.Episodes) + Integer.IsGreater(ListItem.Property(UnWatchedEpisodes),0)]]</visible>
		</control>
		
		<include>WatchedIndicatorSmall</include>
		
		<control type="image">
			<bottom>0</bottom>
			<posy>0</posy>
			<height>1</height>
			<texture>diffuse/panel.png</texture>
			<colordiffuse>grey</colordiffuse>
			
		</control>
	</include>

    <include name="LowListSlimLayoutFocus">
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<height>68</height>
			<texture border="5">diffuse/panel.png</texture>
			<colordiffuse>$INFO[Skin.String(ViewDetailsFocusColor)]</colordiffuse>
			
		</control>
		<!--Title-->
		<control type="label">
			<posx>10</posx>
			<posy>3</posy>
			<align>left</align>
			<width>90%</width>
			<label>[B]$INFO[ListItem.Label][/B]</label>
			<textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
			<font>Light30</font>
			<scroll>true</scroll>
		</control>
		
		<!--duration-->
		<control type="label">
			<posy>3</posy>
			<right>10</right>
			<width>150</width>
			<align>right</align>
			<label>$INFO[ListItem.Duration,,]</label>
			<textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
			<font>Light28</font>
			<visible>![[Skin.HasSetting(WatchedIndicator.Watched) + String.IsEqual(ListItem.Overlay,OverlayWatched.png)] | [Skin.HasSetting(WatchedIndicator.Sets) + String.Contains(ListItem.Path,videodb://movies/sets/)] | [Skin.HasSetting(WatchedIndicator.Progress) + ListItem.IsResumable] | [Skin.HasSetting(WatchedIndicator.Episodes) + Integer.IsGreater(ListItem.Property(UnWatchedEpisodes),0)]]</visible>
		</control>
		
		<include>WatchedIndicatorSmall</include>
		
		<control type="image">
			<bottom>0</bottom>
			<posy>0</posy>
			<height>1</height>
			<texture>diffuse/panel.png</texture>
			<colordiffuse>grey</colordiffuse>
			
		</control>
	</include>

    <include name="View_515_LowList">
	
		<control type="group">
			<include>animation_view_change</include>
			<defaultcontrol always="true">515</defaultcontrol>
			<visible>Control.IsVisible(515)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>

			
			<!-- Fanart Image Added to View-->
            <control type="multiimage">
				<visible>!Skin.HasSetting(View515_DisableFanArt)</visible>
                <include>FullscreenDimensions</include>
                <texture border="15">diffuse/bgpanel.png</texture>
			    <colordiffuse>33ffffff</colordiffuse>
				<imagepath background="true">$VAR[backgroundVar]</imagepath>
                <aspectratio>scale</aspectratio>
                <fadetime>350</fadetime>
                <include>fanartSpeed</include>
                <randomize>true</randomize>
                <loop>yes</loop>
<!-- Background Animation -->
                <animation effect="zoom" start="110" end="130" center="auto" time="12000" tween="cubic" easing="inout" pulse="true" condition="Skin.HasSetting(BackgroundAnimation)">Conditional</animation>
                <animation effect="slide" start="-10,-10" end="10,10" time="8000" tween="cubic" easing="inout" pulse="true" condition="Skin.HasSetting(BackgroundAnimation)">Conditional</animation>
            </control>
			
			<!-- Background Panel-->			
			<control type="image">
				<posx>61</posx>
				<bottom>109</bottom>
				<width>1798</width>
				<height>372</height>
				<texture border="15">diffuse/bgpanel.png</texture>
				<colordiffuse>$VAR[ViewDetailsPanelColor]</colordiffuse>
                <visible>Skin.HasSetting(View515_HidePanel)</visible>
                <visible>Integer.IsGreater(Container.NumItems,0)</visible>
			</control>
		
			<control type="panel" id="515">
				<bottom>125</bottom>	
				<posx>343</posx>
				<posy>10</posy>
				<width>1400</width>
				<height>345</height>
				<onup>515</onup>
				<ondown>515</ondown>
				<onleft>9000</onleft>
				<onright condition="Skin.HasSetting(EnableQuickJump)">6000</onright>
        <onright condition="!Skin.HasSetting(EnableQuickJump)">60</onright>
				<viewtype label="31442">list</viewtype>
				<include content="View_Forced">
					<param name="viewtype" value="$LOCALIZE[31442]" />
				</include>
				<orientation>vertical</orientation>
				<pagecontrol>60</pagecontrol>
				<scrolltime tween="cubic" easing="out">600</scrolltime>
				<preloaditems>2</preloaditems>
				<itemlayout width="857" height="115" condition="!Skin.HasSetting(View515_UseSlimList) + ![Skin.HasSetting(View515_ShowBanners) + Container.Content(tvshows)]">
					<include>LowListLayout</include>
				</itemlayout>
				<focusedlayout width="857" height="115" condition="!Skin.HasSetting(View515_UseSlimList) + ![Skin.HasSetting(View515_ShowBanners) + Container.Content(tvshows)]">
					<include>LowListFocusLayout</include>
				</focusedlayout>
				
				<itemlayout width="857" height="69" condition="Skin.HasSetting(View515_UseSlimList) + ![Skin.HasSetting(View515_ShowBanners) + Container.Content(tvshows)]">
					<include>LowListSlimLayout</include>
				</itemlayout>
				<focusedlayout width="857" height="69" condition="Skin.HasSetting(View515_UseSlimList) + ![Skin.HasSetting(View515_ShowBanners) + Container.Content(tvshows)]">
					<include>LowListSlimLayoutFocus</include>
				</focusedlayout>
				
				<!-- <itemlayout height="173" width="857" condition="[Skin.HasSetting(View515_ShowBanners) + Container.Content(tvshows)]"> -->
                    <!-- <control type="group"> -->
                        <!-- <width>840</width> -->
                        <!-- <height>160</height> -->
                        <!-- <include>BannerLayout</include> -->
					<!-- </control> -->
                <!-- </itemlayout> -->
                <!-- <focusedlayout height="173" width="857" condition="[Skin.HasSetting(View515_ShowBanners) + Container.Content(tvshows)]"> -->
					<!-- <control type="group"> -->
                        <!-- <width>840</width> -->
                        <!-- <height>160</height> -->
                        <!-- <control type="image"> -->
                            <!-- <texture border="5">diffuse/banner.png</texture> -->
                            <!-- <colordiffuse>$INFO[Skin.String(ViewDetailsBorderFocusColor)]</colordiffuse> -->
                            <!-- <aspectratio scalediffuse="false" align="left">stretch</aspectratio> -->
							<!-- <include>thumbsborder_focused</include> -->
                        <!-- </control> -->
                        <!-- <include>BannerLayout</include> -->
					<!-- </control> -->
                <!-- </focusedlayout> -->
			
			</control>
			
			<!--info-->
			<control type="group">
			<bottom>96</bottom>
			<height>365</height>
				<control type="textbox">
					<right>71</right>
					<posy>6</posy>
					<width>625</width>
					<height>333</height>
					<label>$VAR[Plots]</label>
					<font>Light28</font>
					<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
					<shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
					<aligny>top</aligny>
					<visible>![VideoPlayer.Content(livetv) + Skin.HasSetting(PVRShowPreview)]</visible>
                    <visible>Integer.IsGreater(Container.NumItems,0)</visible>
				</control>
			</control>
		
			<!--large poster-->
			<control type="group">
                <visible>Integer.IsGreater(Container.NumItems,0)</visible>
				<bottom>125</bottom>
				<left>72</left>
				<width>245</width>
				<height>345</height>					
				<control type="image">
					<aspectratio align="left" aligny="top" scalediffuse="true">stretch</aspectratio>
					<texture background="true" diffuse="diffuse/poster4.png" fallback="DefaultVideo.png">$VAR[PosterThumb]</texture>
                    <visible>[!String.IsEmpty(ListItem.Art(poster)) | !String.IsEmpty(ListItem.Art(tvshow.poster))]</visible>
                    <visible>![ListItem.IsCollection + Skin.HasSetting(EmbyCovertArtEnabled)]</visible>
				</control>
                <control type="image">
					<aspectratio align="left" aligny="top" scalediffuse="true">keep</aspectratio>
					<texture background="true" diffuse="diffuse/poster4.png" fallback="DefaultVideo.png">$VAR[PosterThumb]</texture>
                    <visible>[ListItem.IsCollection + Skin.HasSetting(EmbyCovertArtEnabled)]</visible>
				</control>
                <control type="image">
					<aspectratio align="left" aligny="top" scalediffuse="true">keep</aspectratio>
					<texture background="true" diffuse="diffuse/panel2.png" fallback="DefaultVideo.png">$VAR[PosterThumb]</texture>
                    <visible>![ListItem.IsCollection + Skin.HasSetting(EmbyCovertArtEnabled)]</visible>
                    <visible>String.IsEmpty(ListItem.Art(poster)) + String.IsEmpty(ListItem.Art(tvshow.poster))</visible>
				</control>
			</control>
			 <!-- black background behind video -->
            <control type="image">
                <texture>colors/color_black.png</texture>
                <right>50</right>
				<posy>10</posy>
				<width>670</width>
				<height>350</height>
				<visible>VideoPlayer.Content(livetv) + Skin.HasSetting(PVRShowPreview)</visible>
            </control>
			<!--Video Window -->
			<control type="videowindow">
				<right>50</right>
				<posy>10</posy>
				<width>670</width>
				<height>350</height>
				<visible>VideoPlayer.Content(livetv) + Skin.HasSetting(PVRShowPreview)</visible>
			</control>
			
			<!--vertical Scollbar-->
			<control type="scrollbar" id="60">
				<visible>Control.IsVisible(515) + Integer.IsGreater(Container.NumItems,0)</visible>
				<right>10</right>
				<bottom>120</bottom>
				<height>350</height>
				<onup>60</onup>
				<ondown>6000</ondown>
				<onleft>515</onleft>
				<animation effect="fade" start="0" end="100" time="400" condition="[Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] + !Control.IsVisible(6002)">Conditional</animation>
				<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] | Control.IsVisible(6002)">Conditional</animation>
			</control>

		</control>
		
	</include>

</includes>