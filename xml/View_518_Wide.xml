<?xml version="1.0" encoding="utf-8"?>
<!-- BINGIE -->
<includes>
    
    <variable name="WideView_LargeEpisodeLabel">
        <value condition="!Integer.IsGreater(ListItem.Episode,9) + !String.IsEmpty(ListItem.Episode)">$INFO[ListItem.Episode,0]</value>
        <value condition="Integer.IsGreater(ListItem.Episode,9) + !String.IsEmpty(ListItem.Episode)">$INFO[ListItem.Episode]</value>
    </variable>

    <include name="View_518_Wide">
        <control type="group">
            <include>animation_view_change</include>
            <visible>Control.IsVisible(518)</visible>
			
			<!-- Fanart Image Added to View-->
            <control type="multiimage">
				<visible>!Skin.HasSetting(View518_DisableFanArt)</visible>
                <include>FullscreenDimensions</include>
                <texture border="15">diffuse/bgpanel.png</texture>
			    <colordiffuse>33ffffff</colordiffuse>
				<imagepath background="true">$VAR[backgroundVar]</imagepath>
                <aspectratio>scale</aspectratio>
                <fadetime>350</fadetime>
                <include>fanartSpeed</include>
                <randomize>true</randomize>
                <loop>yes</loop>
				<!-- Background Animation -->
                <animation effect="zoom" start="110" end="130" center="auto" time="12000" tween="cubic" easing="inout" pulse="true" condition="Skin.HasSetting(BackgroundAnimation)">Conditional</animation>
                <animation effect="slide" start="-10,-10" end="10,10" time="8000" tween="cubic" easing="inout" pulse="true" condition="Skin.HasSetting(BackgroundAnimation)">Conditional</animation>
            </control>
			
            <control type="group">
                <control type="fixedlist" id="518">
                    <posx>69</posx>
                    <bottom>114</bottom>
                    <height>810</height>
                    <width>1782</width>
                    <onup>518</onup>
                    <ondown>518</ondown>
                    <onleft>9000</onleft>
                    <onright condition="Skin.HasSetting(EnableQuickJump)">6000</onright>
					<onright condition="!Skin.HasSetting(EnableQuickJump)">60</onright>
                    <orientation>vertical</orientation>
                    <pagecontrol>60</pagecontrol>
                    <preloaditems>2</preloaditems>
                    <focusposition>4</focusposition>
                    <viewtype label="31659">list</viewtype>
                    <include content="View_Forced">
                    <param name="viewtype" value="$LOCALIZE[31659]" />
                    </include>
                    <scrolltime tween="quadratic">400</scrolltime>
                    <itemlayout width="1800" height="102">
                        <control type="group">
                            <width>1782</width>
                            <height>92</height>
                            <animation effect="fade" start="100" end="50" time="0" condition="true">Conditional</animation>
                            <control type="image">
                                <texture border="5">diffuse/wide2.png</texture>
                                <colordiffuse>$VAR[ViewDetailsPanelColor]</colordiffuse>
                                <!-- <include>thumbsborder_unfocused</include> -->
                            </control>
                            <control type="image">
                                <!--Panel icon image-->
                                <width>520</width>
                                <height>100%</height>
                                <texture fallback="resource://resource.images.skinicons.wide/video.png" diffuse="diffuse/banner2.png" background="true">$VAR[BannerImage]</texture>
								<aspectratio align="center" aligny="center">stretch</aspectratio>
								<visible>!String.IsEmpty(ListItem.Art(banner)) | !String.IsEmpty(ListItem.Art(tvshow.banner)) | !String.IsEmpty(ListItem.Property(banner))</visible>
                            </control>
							<control type="image">
                                <!--Panel icon image-->
                                <width>520</width>
                                <height>100%</height>
                               <texture fallback="resource://resource.images.skinicons.wide/video.png" diffuse="diffuse/banner2.png" background="true">$VAR[BannerImageFallback]</texture>
								<aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
								<visible>String.IsEmpty(ListItem.Art(banner)) + String.IsEmpty(ListItem.Art(tvshow.banner)) + String.IsEmpty(ListItem.Property(banner))</visible>
                            </control>
							<control type="image">
								<bordersize>10</bordersize>
								<width>520</width>
                                <height>100%</height>
								<aspectratio scalediffuse="false" align="center" aligny="center">keep</aspectratio>
								<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
								<visible>String.IsEmpty(ListItem.Art(banner)) + String.IsEmpty(ListItem.Art(tvshow.banner)) + String.IsEmpty(ListItem.Property(banner))</visible>
								<visible>Skin.HasSetting(ShowClearLogoOnLandscape)</visible>
							</control>
                            <control type="label">
                                <left>549</left>
                                <width>6%</width>
                                <top>-7</top>
                                <height>100</height>
                                <aligny>center</aligny>
                                <align>left</align>
                                <font>Bold86</font>
                                <textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
                                <label>$VAR[WideView_LargeEpisodeLabel]</label>
                                <visible>Container.Content(episodes) + !String.IsEmpty(ListItem.episode)</visible>
                            </control>
                            <control type="label">
                                <left>549</left>
                                <width>67%</width>
                                <top>0</top>
                                <height>50</height>
                                <align>left</align>
                                <font>Bold34</font>
                                <textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
                                <label>$INFO[ListItem.Label]</label>
                                <animation effect="slide" start="0" end="121" time="0" condition="Container.Content(episodes)">Conditional</animation>
                            </control>
                            <control type="label">
                                <left>549</left>
                                <width>67%</width>
                                <top>48</top>
                                <aligny>center</aligny>
                                <height>38</height>
                                <align>left</align>
                                <font>Bold26</font>
                                <textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
                                <label fallback="19055">$VAR[ListDetails]</label>
                                <animation effect="slide" start="0" end="121" time="0" condition="Container.Content(episodes)">Conditional</animation>
                            </control>
                            <control type="group">
                                <right>0</right>
                                <top>0</top>
                                <include>WatchedIndicatorNormal</include>
                             </control>
                        </control>
                    </itemlayout>
                    <focusedlayout width="1800" height="302">
                        <control type="group">
                            <width>1782</width>
                            <top>0</top>
                            <height>292</height>
                            <control type="image">
                                <texture border="5">diffuse/wide2.png</texture>
                                <colordiffuse>$VAR[ViewDetailsPanelColor]</colordiffuse>
                                <!-- <include>thumbsborder_unfocused</include> -->
                            </control>
                            <control type="image">
                                <!--Panel icon image-->
                                <width>520</width>
                                <height>100%</height>
                                <texture background="true" diffuse="diffuse/wide2.png" fallback="resource://resource.images.skinicons.wide/video.png">$VAR[LandscapeImage]</texture>
                                <aspectratio scalediffuse="false" align="center" aligny="center">scale</aspectratio>
                            </control>
							<control type="image">
								<bottom>-70</bottom>
								<bordersize>70</bordersize>
								<width>520</width>
                                <height>100%</height>
								<aspectratio scalediffuse="false" align="center" aligny="center">keep</aspectratio>
								<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
								<visible>String.IsEmpty(ListItem.Art(landscape)) + String.IsEmpty(ListItem.Art(tvshow.landscape)) + String.IsEmpty(ListItem.Property(landscape))</visible>
								<visible>Skin.HasSetting(ShowClearLogoOnLandscape)</visible>
							</control>
                            <control type="label">
                                <left>549</left>
                                <width>6%</width>
                                <top>7</top>
                                <height>100</height>
                                <aligny>center</aligny>
                                <align>left</align>
                                <font>Bold86</font>
                                <textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
                                <label>$VAR[WideView_LargeEpisodeLabel]</label>
                                <visible>Container.Content(episodes) + !String.IsEmpty(ListItem.episode)</visible>
								<animation effect="slide" start="0" end="0,-14" time="0" condition="Container.Content(episodes)">Conditional</animation>
                            </control>
							<control type="label">
                                <left>549</left>
                                <width>67%</width>
                                <top>14</top>
                                <height>50</height>
                                <aligny>center</aligny>
                                <align>left</align>
                                <font>Bold34</font>
                                <textcolor>$INFO[Skin.String(ViewDetailsHighlightTextColor)]</textcolor>
                                <label>$INFO[ListItem.Label]</label>
                                <visible>Container.Content(episodes) + !String.IsEmpty(ListItem.episode)</visible>
								<animation effect="slide" start="0" end="121" time="0" condition="Container.Content(episodes)">Conditional</animation>
								<animation effect="slide" start="0" end="0,-14" time="0" condition="Container.Content(episodes)">Conditional</animation>
                            </control>
                            <control type="label">
                                <left>549</left>
                                <width>67%</width>
                                <top>7</top>
                                <height>50</height>
                                <align>left</align>
                                <font>Bold52</font>
                                <textcolor>$INFO[Skin.String(ViewDetailsHighlightTextColor)]</textcolor>
                                <label>$INFO[ListItem.Label]</label>
								<visible>!Container.Content(episodes)</visible>
                            </control>
                            <control type="label">
                                <left>549</left>
                                <width>67%</width>
                                <top>66</top>
                                <aligny>center</aligny>
                                <height>38</height>
                                <align>left</align>
                                <font>Bold26</font>
                                <textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
                                <label fallback="19055">$VAR[ListDetails]</label>
                                <animation effect="slide" start="0" end="121" time="0" condition="Container.Content(episodes)">Conditional</animation>
								<animation effect="slide" start="0" end="0,-18" time="0" condition="Container.Content(episodes)">Conditional</animation>
                            </control>
                            <control type="textbox">
                                <left>549</left>
                                <right>29</right>
                                <top>105</top>
                                <height>180</height>
                                <align>justify</align>
                                <font>Bold34</font>
                                <textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
                                <label>$VAR[Plots]</label>
								<animation effect="slide" start="0" end="0,-18" time="0" condition="Container.Content(episodes)">Conditional</animation>
                            </control>
                            <control type="group">
                                <right>0</right>
                                <top>0</top>
                                <include>WatchedIndicatorNormal</include>
                             </control>
                        </control>
                    </focusedlayout>
                </control>
                <!--vertical Scollbar-->
                <control type="scrollbar" id="60">
                    <visible>Control.IsVisible(518) + Integer.IsGreater(Container.NumItems,0)</visible>
                    <right>10</right>
                    <bottom>122</bottom>
                    <height>802</height>
                    <onup>60</onup>
                    <ondown>6000</ondown>
                    <onleft>518</onleft>
                    <animation effect="fade" start="0" end="100" time="400" condition="[Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] + !Control.IsVisible(6002)">Conditional</animation>
                    <animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] | Control.IsVisible(6002)">Conditional</animation>
                </control>
            </control>
         </control>
    </include>
   

</includes>
