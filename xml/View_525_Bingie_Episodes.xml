            <control type="multiimage">
				<visible>Skin.HasSetting(View525_EnableFanArt)</visible>
                <include>FullscreenDimensions</include>
                <texture>diffuse/panel2.png</texture>
			    <colordiffuse>26ffffff</colordiffuse>
