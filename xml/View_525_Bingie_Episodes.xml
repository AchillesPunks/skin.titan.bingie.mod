    <include name="View_525_Seasons_List_No_Focus">
        <!-- bingie button border -->
        <control type="image">
            <visible>!String.IsEmpty(Container(525).ListItem.Season) + !String.IsEmpty(Container(5250).ListItem.Season) + String.IsEqual(Container(5250).ListItem.Season,Container(525).ListItem.Season) + [Control.HasFocus(525) | Control.HasFocus(60)]</visible>
