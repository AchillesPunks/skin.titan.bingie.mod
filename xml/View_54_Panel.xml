<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="View_54_Panel">	
		<!-- panel no info -->
        <control type="group">
            <visible>Control.IsVisible(54)</visible>
            <include>animation_view_change</include>
			
			<!-- Fanart Image Added to View-->
            <control type="multiimage">
				<visible>!Skin.HasSetting(View54_DisableFanArt)</visible>
                <include>FullscreenDimensions</include>
                <texture>diffuse/panel2.png</texture>
			    <colordiffuse>33ffffff</colordiffuse>
				<imagepath background="true">$VAR[backgroundVar]</imagepath>
                <aspectratio>scale</aspectratio>
                <fadetime>350</fadetime>
                <include>fanartSpeed</include>
                <randomize>true</randomize>
                <loop>yes</loop>
		<!-- Background Animation -->
                <animation effect="zoom" start="110" end="130" center="auto" time="12000" tween="cubic" easing="inout" pulse="true" condition="Skin.HasSetting(BackgroundAnimation)">Conditional</animation>
                <animation effect="slide" start="-10,-10" end="10,10" time="8000" tween="cubic" easing="inout" pulse="true" condition="Skin.HasSetting(BackgroundAnimation)">Conditional</animation>
            </control>
			
			<control type="panel" id="54">
                <posx>40</posx>
                <bottom>12%</bottom>
                <height>798</height>
                <width>1860</width>
                <onup>54</onup>
                <ondown>54</ondown>
                <onleft>9000</onleft>
                <onright condition="Skin.HasSetting(EnableQuickJump)">6000</onright>
                <onright condition="!Skin.HasSetting(EnableQuickJump)">60</onright>
                <pagecontrol>60</pagecontrol>
                <viewtype label="31680">icons</viewtype>
                <include content="View_Forced">
                    <param name="viewtype" value="$LOCALIZE[31680]" />
                </include>
                <scrolltime tween="Cubic" easing="inout">500</scrolltime>
                <orientation>vertical</orientation>
                <preloaditems>2</preloaditems>
                <!-- itemlayout movies -->
                <itemlayout height="266" width="185">
                    <control type="group">
                        <width>183</width>
                        <height>264</height>
                        <include>SmallPosterPanelLayout</include>
          <control type="group">
			<!--Watched Overlay-->
			<right>8</right>
			<top>8</top>
			<include>WatchedIndicatorSmall</include>
		</control>
                      </control>
                </itemlayout>
                <!-- focussed layout movies -->
                <focusedlayout height="266" width="185">
                    <control type="group">
                        <width>183</width>
                        <height>264</height>
                        <include>SmallPosterPanelLayoutFocus</include>
          <control type="group">
			<!--Watched Overlay-->
			<right>8</right>
			<top>8</top>
			<include>WatchedIndicatorSmall</include>
		</control>
                      </control>
                </focusedlayout>
			</control>
		
			<!--vertical Scollbar-->
			<control type="scrollbar" id="60">
				<visible>Control.IsVisible(54) + Integer.IsGreater(Container.NumItems,0)</visible>
				<right>7</right>
				<bottom>140</bottom>
				<height>780</height>
				<onup>60</onup>
				<ondown>6000</ondown>
				<onleft>54</onleft>
				<animation effect="fade" start="0" end="100" time="400" condition="[Control.HasFocus(60) | Container.Scrolling | String.IsEqual(Skin.String(scrollbar_visibility),always_show)] + !Control.IsVisible(6002)">Conditional</animation>
				<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Container.Scrolling | String.IsEqual(Skin.String(scrollbar_visibility),always_show)] | Control.IsVisible(6002)">Conditional</animation>
			</control>
		</control>
    </include>
</includes>